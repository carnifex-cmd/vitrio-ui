{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "src",
    "cli",
    "vite.config.ts",
    "setupTests.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
} 